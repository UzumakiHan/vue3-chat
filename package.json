{
  "name": "vue3-chat",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run check && vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint-staged": "lint-staged",
    "check": "npx hfex-check --husky --directory"
  },
  "dependencies": {
    "@vueuse/core": "^10.1.2",
    "axios": "^1.3.3",
    "dayjs": "^1.11.7",
    "localforage": "^1.10.0",
    "pinia": "^2.0.30",
    "qs": "^6.11.0",
    "recorderx": "^2.0.2",
    "socket.io-client": "^4.6.2",
    "vant": "^4.0.10",
    "vue": "^3.2.45",
    "vue-baidu-map": "^0.21.22",
    "vue-router": "4",
    "vue-socket.io": "^3.0.10",
    "vue3-baidu-map-gl": "^2.1.3"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/qs": "^6.9.7",
    "@vitejs/plugin-vue": "^4.0.0",
    "eslint": "8.39.0",
    "eslint-config-hfex": "^1.1.0",
    "hfex-ellipsis": "^1.1.0",
    "hfex-list": "^1.1.0",
    "hfex-prettier-config": "^1.0.0",
    "hfex-stylelint-config": "^1.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.58.1",
    "stylelint": "^15.7.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vue-tsc": "^1.0.24"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "hfex"
    ]
  },
  "stylelint": {
    "extends": [
      "hfex-stylelint-config/src/rules/vue"
    ]
  },
  "prettier": "hfex-prettier-config",
  "lint-staged": {
    "**/src/**/*.{ts,js,json,vue,jsx,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "**/src/**/*.{html,vue,scss,css,less}": [
      "stylelint --fix",
      "git add"
    ],
    "**/src/**/*.{ts,js,vue,scss,css,less,json}": [
      "prettier --write",
      "git add"
    ]
  }
}